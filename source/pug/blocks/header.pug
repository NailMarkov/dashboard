header.page-header
  a.page-header__link(href="!#")
    img(src="img/svg/logo-header.svg", alt="Логотип Админ панели.", width="257", height="76")
  nav.nav
    button.nav__btn(type="button")
      span.visually-hidden Переключение меню.
      svg.nav__icon(aria-hidden="true", focusable="false", width="18", height="18",
        xmlns="http://www.w3.org/2000/svg")
        use(xlink:href="img/sprite.svg#arrow-left")
    .nav__search
      input.nav__input(type="search", placeholder="Search...")
    ul.list-user
      li.list-user__item
        a.list-user__link(href="!#")
          span.visually-hidden Уведомление.
          svg.list-user__icon(aria-hidden="true", focusable="false", width="24", height="24",
            xmlns="http://www.w3.org/2000/svg")
            use(xlink:href="img/sprite.svg#notification")
      li.list-user__item
        a.list-user__link(href="!#")
          span.visually-hidden Уведомление на почту.
          svg.list-user__icon(aria-hidden="true", focusable="false", width="24", height="24",
            xmlns="http://www.w3.org/2000/svg")
            use(xlink:href="img/sprite.svg#message")
    .account-user
      img(src="img/svg/avatar.svg", alt="Аватарка пользователя.", width="45", height="45")
      span.account-user__name Austin Robertson
      span.account-user__post Marketing Administrator
